					},
					"render": {
						"en": "This barrier was last surveyed on {survey:date}"
					},
					"freeform": {
						"key": "survey:date",
						"type": "date"
					},
					"mappings": [
						{
							"if": "survey:date:={_now:date}",
							"then": "Surveyed today"
