{
	"id": "verkeerdeborden",
	"title": {
		"nl": "VerkeerdeBordenDatabank"
	},
	"maintainer": "Seppe Santens",
	"icon": "https://upload.wikimedia.org/wikipedia/commons/b/bc/Belgian_traffic_sign_A51.svg",
	"description": {
		"nl": "Een kaart om verkeerde of ontbrekende verkeersborden te tonen."
	},
	"language": [
		"nl"
	],
	"version": "2021-09-12",
	"startLat": 51.08881,
	"startLon": 3.447282,
	"startZoom": 15,
	"clustering": {
    "maxZoom": 8
  },
	"layers": [
		{
			"id": "trafficsign",
			"name": {
				"nl": "verkeersbord"
			},
			"source": {
				"osmTags":{
					"and": [
						"traffic_sign~*",
						"traffic_sign:issue~*"
					]
				}
			},
			"minzoom": 10,
			"wayHandling": 1,
			"title": {
				"render": {
					"nl": "verkeersbord {traffic_sign}"
				}
			},
			"icon": "./TS_bolt.svg",
			"tagRenderings": [
				"images",
				{
					"render": {
						"nl": "Opmerking bij dit verkeersbord: {traffic_sign:issue}"
					},
					"question": {
						"nl": "Wat is er mis met dit verkeersbord?"
					},
					"freeform": {
						"key": "traffic_sign:issue"
					}
				},
				{
					"question":{
						"nl": "Wanneer werd dit verkeersbord laatst gesurveyed?"
					},
					"render": {
						"nl": "Dit verkeersbord werd laatst gesurveyed op {survey:date}"
					},
					"freeform": {
						"key": "survey:date",
						"type": "date"
					},
					"mappings": [
						{
							"if": "survey:date:={_now:date}",
							"then": "Vandaag gesurveyed!"
						}
					]
				}
			]
		},
		{
			"id": "notrafficsign",
			"name": {
				"nl": "geen verkeersbord"
			},
			"source": {
				"osmTags":{
					"and": [
						"no:traffic_sign~*",
						"traffic_sign:issue~*"
					]
				}
			},
			"minzoom": 10,
			"wayHandling": 1,
			"title": {
				"render": {
					"nl": "ontbrekend verkeersbord {no:traffic_sign}"
				}
			},
			"icon": "./TS_questionmark.svg",
			"tagRenderings": [
				"images",
				{
					"render": {
						"nl": "Opmerking bij deze situatie: {traffic_sign:issue}"
					},
					"question": {
						"nl": "Wat is er mis met deze situatie?"
					},
					"freeform": {
						"key": "traffic_sign:issue"
					}
				},
				{
					"question":{
						"nl": "Wanneer werd deze situatie laatst gesurveyed?"
					},
					"render": {
						"nl": "Deze situatie werd laatst gesurveyed op {survey:date}"
					},
					"freeform": {
						"key": "survey:date",
						"type": "date"
					},
					"mappings": [
						{
							"if": "survey:date:={_now:date}",
							"then": "Vandaag gesurveyed!"
						}
					]
				}
			]
		}
	],
	"defaultBackgroundId": "Stamen.TonerLite"
}
